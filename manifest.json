{
  "manifest_version": 3,
  "name": "DSAGENIE",
  "version": "1.0.0",
  "description": "Instant solutions and explanations for LeetCode DSA problems",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://www.youtube.com/*",
    "https://*.onrender.com/*",
    "http://localhost:*/*"
  ],
  "action": {
    "default_popup": "build/index.html",
    "default_title": "DSAGENIE"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
